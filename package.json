    "@vitest/ui": "^0.29.8",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "moo": "^0.5.2",
    "prettier": "^2.8.7",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vitest": "^0.29.8"

  },

  "lint-staged": {
    "*.{js,ts,tsx,mjs,cjs}": "eslint --fix",
